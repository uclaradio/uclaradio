  "private": true,
  "scripts": {
    "postcheckout": "yarn",
    "start": "node ./bin/www",
    "watch": "nodemon ./bin/www --ignore public/",
    "dev": "concurrently  --kill-others 'yarn run watch' 'yarn run assets' --names 'ðŸ’»,ðŸ“¦' --prefix name",
    "assets": "webpack --watch --display-max-modules 0",
