
extends layout

block content

	#container
		form( action='/panel/send-password-reset' method='post' enctype='application/x-www-form-urlencoded')#login-form.well.span4
			h1 Reset DJ Password
			p.subheading Enter the email associated with your account
			label Email 
			input(type="email", name="email", id='email-tf').span4.required
			p.subheading I forgot my... (Check all that apply)
			input(type="checkbox", name="username", alignment = "Alignment_left", checked=(condition))
			= "Username"
			input(type="checkbox", name="password", alignment = "Alignment_left", checked=(condition))
			= "Password"
				|
			button(git type="submit" style="width:8rem;")#account-form-btn1.btn
				| Send
block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/reset.js')
	script(src='/js/form-validators/resetValidator.js')