
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container
	form( method="post")#account-form.form-horizontal.well.span6
		h1
		p#sub1.subheading Please tell us a little about yourself.
		hr
		fieldset
			#fullName-cg.control-group
				label.control-label(for='fullName-tf') Full Name
				.controls
					input#fullName-tf(type='text', name='fullName', value= user.fullName)
			#email-cg.control-group
				label.control-label(for='email-tf') Email
				.controls
					input#email-tf(type='text', name='email', value= user.email)
			hr
			p#sub2.subheading
			#user-cg.control-group
				label.control-label(for='user-tf') Username (cannot be changed)
				.controls
					input#user-tf.disabled(type='text', name='username', value= user.user)
			#pass-cg.control-group
				label.control-label(for='pass-tf') Password
				.controls
					input#pass-tf(type='password', name='pass', value='')
			hr
			.form-buttons
				button(type='button',onclick="window.location.href='/panel'")#account-form-btn1.btn back
				button(type='submit')#account-form-btn2.btn submit

// display form errors in a custom modal window //

include modals/form-errors
