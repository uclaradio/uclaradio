
extends layout

block content

	#container
		form( method="post")#login-form.well.span4
			h1 Secret DJ Panel
			p.subheading Please log in to your account
			label Username 
			input(type="text", name="username", id='user-tf').span4.required
			label Password
			input(type="password", name="pass", id='pass-tf').span4.required
			button(git type="submit")#btn-login.btn.btn-primary
				i.icon-lock.icon-white
				| Sign in
			label#remember-me.checkbox Remember Me
				input(type="checkbox", checked='checked')
			div.clear-fix
			hr
			div.btm-links
				a(href='/panel/reset-password')#forgot-password Forgot user/password?
			div.btm-links
				a(href='/panel/signup')#create-account Request An Account

	include modals/alert
	include modals/lost-password

block scripts
	script(src='/panel/vendor/jquery.min.js')
	script(src='/panel/vendor/jquery.form.js')
	script(src='/panel/vendor/bootstrap-modal.js')
	script(src='/panel/vendor/bootstrap-transition.js')
	script(src='/panel/js/views/login.js')
	script(src='/panel/js/controllers/loginController.js')
	script(src='/panel/js/form-validators/loginValidator.js')
	script(src='/panel/js/form-validators/emailValidator.js')